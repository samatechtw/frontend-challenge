{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es2020",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "types": ["vue-i18n"],
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "exclude": ["**/*.spec.js", "**/*.spec.jsx", "**/*.spec.ts", "**/*.spec.tsx"],
  "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.vue", "**/*.json"]
}
